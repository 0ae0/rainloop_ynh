{
    "name": "Rainloop",
    "id": "rainloop",
    "description": {
        "en": "Lightweight webmail",
        "fr": "Webmail leger"
    },
    "url": "http://rainloop.net/",
    "maintainer": {
        "name": "polytan02",
        "email": "polytan02@mcgva.org"
    },
    "multi_instance": "true",
    "arguments": {
        "install" : [
            {
                "name": "domain",
                "type": "domain",
                "ask": {
                    "en": "Choose a domain for Rainloop",
                    "fr": "Choisissez un domaine pour Rainloop"
                },
                "example": "domain.org"
            },
            {
                "name": "path",
                "type": "path",
                "ask": {
                    "en": "Choose a path for Rainloop",
                    "fr": "Choisissez un chemin pour Rainloop"
                },
                "example": "/rainloop",
                "default": "/rainloop"
            }
        ]
    }
}
